<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/body"
    tools:context=".stat.Singular"
    tools:ignore="MissingConstraints"
    tools:viewBindingIgnore="true">

    <ProgressBar
        android:id="@+id/loading"
        style="@style/statLoading" />

    <ir.mahdiparastesh.hellocharts.view.ColumnChartView
        android:id="@+id/main"
        style="@style/statChart"
        android:paddingTop="68dp" />

    <TextView
        android:id="@+id/title"
        style="@style/statTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/identify"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_light"
        android:tooltipText="@string/addNewRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/identifyIV"
            style="@style/parentConstraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/addNewRecord"
            android:src="@drawable/default_user_person"
            app:layout_constraintHeight_percent=".6"
            app:layout_constraintWidth_percent=".6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>