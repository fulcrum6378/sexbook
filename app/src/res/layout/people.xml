<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/body"
    tools:context=".People"
    tools:ignore="MissingConstraints">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:title="@string/people" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        style="@style/yellowBoxList"
        android:fadeScrollbars="false"
        android:paddingVertical="@dimen/ybListPadV"
        app:layoutManager="ir.mahdiparastesh.sexbook.view.SafeLinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/empty"
        style="@style/empty"
        android:text="@string/emptyLove" />

    <View style="@style/tbShadow" />
</androidx.constraintlayout.widget.ConstraintLayout>