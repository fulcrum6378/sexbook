<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/itemMarH"
    android:layout_marginVertical="@dimen/itemMarV"
    android:background="@drawable/yellow_box"
    android:paddingHorizontal="@dimen/itemPadH"
    android:paddingVertical="@dimen/itemPadV">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="14sp"
        android:fontFamily="@font/bold"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="5"
        android:textSize="@dimen/crushNameFont"
        app:layout_constraintEnd_toStartOf="@id/sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>