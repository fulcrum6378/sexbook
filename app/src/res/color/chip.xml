<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- normal state -->
    <item android:color="#DDD" android:state_activated="false" />
    <item android:color="#AFAFAF" android:state_activated="false" android:state_pressed="true" />
    <item android:color="#AFAFAF" android:state_activated="false" android:state_focused="true" />

    <!-- found in search -->
    <item android:color="?colorPrimary" android:state_activated="true" />
    <item android:color="?colorPrimaryVariant" android:state_activated="true" android:state_pressed="true" />
    <item android:color="?colorPrimaryVariant" android:state_activated="true" android:state_focused="true" />
</selector>