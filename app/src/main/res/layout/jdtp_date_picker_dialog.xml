<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="@dimen/jdtp_date_picker_component_width"
    android:layout_height="match_parent"
    android:background="@color/jdtp_date_picker_view_animator"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/jdtp_selected_calendar_layout_height"
        android:orientation="vertical">

        <include layout="@layout/jdtp_date_picker_selected_date" />
    </LinearLayout>

    <include layout="@layout/jdtp_date_picker_view_animator" />

    <include layout="@layout/jdtp_done_button" />
</LinearLayout>