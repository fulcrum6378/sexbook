<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/itemMarH"
    android:layout_marginTop="@dimen/itemMarV"
    android:layout_marginEnd="@dimen/itemMarH"
    android:layout_marginBottom="@dimen/itemMarV"
    android:background="@drawable/yellow_box"
    android:paddingStart="@dimen/itemPadH"
    android:paddingTop="@dimen/itemPadV"
    android:paddingEnd="@dimen/itemPadH"
    android:paddingBottom="@dimen/itemPadV">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="14sp"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="5"
        android:textColor="@color/mrvDate"
        android:textSize="@dimen/crushNameFont"
        app:fontFamily="@font/bold"
        app:layout_constraintEnd_toStartOf="@id/sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mrvNotes"
        android:textSize="16sp"
        app:fontFamily="@font/bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>