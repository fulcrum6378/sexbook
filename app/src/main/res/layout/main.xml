<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".Main"
    tools:ignore="MissingConstraints,ContentDescription">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:menu="@menu/toolbar"
        app:title="@string/app_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="85dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/spnFilter"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        android:background="@drawable/button_1"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/spnFilter"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/addIV"
            style="@style/parentConstraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/add_1"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="0.6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Spinner
        android:id="@+id/spnFilter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/spn_filter"
        android:paddingStart="28dp"
        android:paddingTop="14dp"
        android:paddingEnd="5dp"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/spnFilterMark"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="22dp"
        android:rotation="90"
        android:src="@drawable/play_3_ntf"
        app:layout_constraintBottom_toBottomOf="@id/spnFilter"
        app:layout_constraintEnd_toEndOf="@id/spnFilter"
        app:layout_constraintTop_toTopOf="@id/spnFilter" />

    <View
        style="@style/shadow_1"
        android:layout_height="6dp"
        android:alpha="0.4"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        style="@style/shadow_1"
        android:layout_height="2dp"
        android:alpha="0.33"
        android:rotationX="180"
        app:layout_constraintBottom_toTopOf="@id/spnFilter" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/load"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/loadIV"
            style="@style/loadIV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>