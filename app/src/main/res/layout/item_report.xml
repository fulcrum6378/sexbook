<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="7dp"
    android:background="@drawable/yellow_box"
    android:paddingVertical="10dp"
    tools:ignore="ContentDescription,MissingConstraints,RtlSymmetry,SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clock"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/clock_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/clockHour"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_hand"
            app:layout_constraintBottom_toBottomOf="@id/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.07" />

        <View
            android:id="@+id/clockMin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_hand"
            app:layout_constraintBottom_toBottomOf="@id/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.07" />

        <View
            android:id="@+id/point"
            style="@style/parentConstraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_point"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.13" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/ampm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mrvAMPM"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintStart_toEndOf="@id/clock" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:textColor="@color/mrvDate"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/clock"
        app:layout_constraintTop_toTopOf="@id/clock" />

    <AutoCompleteTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/tp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:hint="@string/mrvNotesHint"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:paddingEnd="15dp"
        android:textColor="@color/mrvNotes"
        android:textColorHint="@color/mrvNotesHint"
        android:textIsSelectable="true"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toStartOf="@id/type"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clock"
        app:layout_constraintWidth_percent="0.5"
        tools:ignore="RtlSymmetry" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/clock" />

    <EditText
        android:id="@+id/desc"
        style="@style/desc"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/clock"
        tools:ignore="Autofill" />

    <Spinner
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spn_filter"
        android:paddingStart="17dp"
        android:paddingVertical="12dp"
        android:paddingEnd="34dp"
        android:theme="@style/AppTheme"
        app:layout_constraintTop_toBottomOf="@id/desc" />

    <ImageView
        android:id="@+id/placeMark"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="20dp"
        android:rotation="90"
        android:src="@drawable/play_3_ntf"
        app:layout_constraintBottom_toBottomOf="@id/place"
        app:layout_constraintEnd_toEndOf="@id/place"
        app:layout_constraintTop_toTopOf="@id/place" />
</androidx.constraintlayout.widget.ConstraintLayout>