<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/itemMarH"
    android:layout_marginTop="@dimen/itemMarV"
    android:layout_marginEnd="@dimen/itemMarH"
    android:layout_marginBottom="@dimen/itemMarV"
    android:background="@drawable/yellow_box"
    android:paddingTop="@dimen/reportPadV"
    android:paddingBottom="@dimen/reportPadV"
    tools:ignore="ContentDescription,MissingConstraints,RtlSymmetry,SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clock"
        android:layout_width="@dimen/clockSize"
        android:layout_height="@dimen/clockSize"
        android:layout_marginStart="@dimen/reportPadH"
        android:background="@drawable/clock_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/clockHour"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_hand"
            app:layout_constraintBottom_toBottomOf="@id/point"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.07" />

        <View
            android:id="@+id/clockMin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_hand"
            app:layout_constraintBottom_toBottomOf="@id/point"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.07" />

        <View
            android:id="@+id/point"
            style="@style/parentConstraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/clock_point"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.13" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ampm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/ampmFont"
        app:fontFamily="@font/normal"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintStart_toEndOf="@id/clock" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:textSize="@dimen/dateFont"
        app:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/clock"
        app:layout_constraintTop_toTopOf="@id/clock" />

    <ir.mahdiparastesh.sexbook.more.SoftAutoCompleteTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:hint="@string/mrvNotesHint"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:paddingStart="6sp"
        android:paddingEnd="15dp"
        android:textIsSelectable="true"
        android:textSize="@dimen/nameFont"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toStartOf="@id/type"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clock"
        app:layout_constraintWidth_percent="0.46"
        tools:ignore="RtlSymmetry" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="@dimen/typeSize"
        android:layout_height="@dimen/typeSize"
        android:layout_marginEnd="@dimen/typeMarEnd"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/clock" />

    <ir.mahdiparastesh.sexbook.more.SoftEditText
        android:id="@+id/desc"
        style="@style/desc"
        android:layout_marginStart="@dimen/reportPadH"
        android:layout_marginEnd="@dimen/reportPadH"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintTop_toBottomOf="@id/clock"
        tools:ignore="Autofill" />

    <Spinner
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spn_filter"
        android:paddingStart="17dp"
        android:paddingTop="12dp"
        android:paddingEnd="34dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/desc" />

    <ImageView
        android:id="@+id/placeMark"
        android:layout_width="@dimen/markSize"
        android:layout_height="@dimen/markSize"
        android:layout_marginEnd="@dimen/placeMarkMarEnd"
        android:rotation="90"
        android:src="@drawable/play_3_ntf"
        app:layout_constraintBottom_toBottomOf="@id/place"
        app:layout_constraintEnd_toEndOf="@id/place"
        app:layout_constraintTop_toTopOf="@id/place" />
</androidx.constraintlayout.widget.ConstraintLayout>