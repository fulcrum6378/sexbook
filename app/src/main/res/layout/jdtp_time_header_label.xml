<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/jdtp_accent_color"
    tools:viewBindingIgnore="true">

    <View
        android:id="@+id/center_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:importantForAccessibility="no"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hour_space"
        style="@style/jdtp_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/separator"
        android:importantForAccessibility="no"
        android:text="@string/jdtp_time_placeholder"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/hour_space"
        android:layout_alignEnd="@+id/hour_space"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/jdtp_extra_time_label_margin"
        android:layout_marginRight="@dimen/jdtp_extra_time_label_margin">

        <ir.mahdiparastesh.sexbook.jdtp.AccessibleTextView
            android:id="@+id/hours"
            style="@style/jdtp_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/jdtp_time_placeholder"
            android:textColor="@color/jdtp_white" />
    </FrameLayout>

    <TextView
        android:id="@+id/separator"
        style="@style/jdtp_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/center_view"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:paddingLeft="@dimen/jdtp_separator_padding"
        android:paddingRight="@dimen/jdtp_separator_padding"
        android:text="@string/jdtp_time_separator"
        android:textColor="@color/jdtp_accent_color_focused" />

    <TextView
        android:id="@+id/minutes_space"
        style="@style/jdtp_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/separator"
        android:importantForAccessibility="no"
        android:text="@string/jdtp_time_placeholder"
        android:textColor="@color/jdtp_accent_color_focused"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/minutes_space"
        android:layout_alignEnd="@+id/minutes_space"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/jdtp_extra_time_label_margin"
        android:layout_marginRight="@dimen/jdtp_extra_time_label_margin">

        <ir.mahdiparastesh.sexbook.jdtp.AccessibleTextView
            android:id="@+id/minutes"
            style="@style/jdtp_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/jdtp_time_placeholder"
            android:textColor="@color/jdtp_accent_color_focused" />
    </FrameLayout>

    <ir.mahdiparastesh.sexbook.jdtp.AccessibleTextView
        android:id="@+id/ampm_hitspace"
        android:layout_width="@dimen/jdtp_ampm_label_size"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ampm_label"
        android:layout_alignEnd="@+id/ampm_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/ampm_label"
        style="@style/jdtp_ampm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/separator"
        android:layout_toEndOf="@+id/minutes_space"
        android:importantForAccessibility="no"
        android:paddingLeft="@dimen/jdtp_ampm_left_padding"
        android:paddingRight="@dimen/jdtp_ampm_left_padding"
        android:text="@string/jdtp_time_placeholder"
        android:textColor="@color/jdtp_accent_color_focused" />
</RelativeLayout>