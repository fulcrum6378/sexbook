<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Sexbook.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/CP</item>
        <item name="colorPrimaryDark">@color/CPD</item>
        <item name="colorAccent">@color/CP3</item>
        <item name="android:editTextColor">@color/CPDD</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColor">@color/CPDD</item>
        <item name="android:textColorHighlight">@color/textHighlight</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="checkboxStyle">@style/Theme.Sexbook.CheckBox.Yellow</item>
        <item name="chipStyle">@style/Theme.Sexbook.Chip</item>
        <item name="colorControlNormal">@color/CPDD</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Sexbook.Dialogue</item>
        <item name="navigationViewStyle">@style/Widget.Sexbook.NavigationView</item>
        <item name="titleTextColor">@color/CPDD</item>
    </style>

    <style name="Theme.Sexbook" parent="Theme.Sexbook.Base">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Widget.Sexbook.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance_Sexbook_Nav</item>
        <item name="itemRippleColor">@color/CPDD</item>
        <item name="itemTextAppearance">@style/TextAppearance.Fortuna.Navigation</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Sexbook.Dialogue.Layout" parent="Theme.Sexbook">
        <item name="android:textColor">@color/dialogText</item>
        <item name="android:editTextColor">@color/dialogText</item>
        <item name="android:textColorHint">@color/dialogHint</item>
        <item name="colorControlNormal">@color/dialogText</item>
    </style>

    <style name="ThemeOverlay.Sexbook.Dialogue" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Theme.Sexbook.Dialogue</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.Sexbook.Dialogue.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.Sexbook.Dialogue.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Sexbook.Dialogue.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Sexbook.Dialogue.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Sexbook.Dialogue.Button</item>
    </style>

    <style name="Theme.Sexbook.Dialogue" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.Sexbook.Medium</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.Sexbook.Dialogue.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/CPDD</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="Theme.Sexbook.Dialogue.Body" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/CPDD</item>
        <item name="android:textSize">15.5sp</item>
        <item name="fontFamily">@font/normal</item>
        <item name="lineHeight">25sp</item><!--android:lineSpacingExtra doesn't work here.-->
    </style>

    <style name="Widget.Sexbook.Dialogue.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/CPDD</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Sexbook.Small</item>
        <item name="fontFamily">@font/normal</item>
    </style>

    <style name="Theme.Sexbook.CheckBox.Yellow" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/CPDD</item><!--avoid ?android:attr/textColor-->
        <item name="buttonTint">@color/CPDD</item><!--avoid ?android:attr/textColor-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Sexbook.CheckBox.Yellow</item>
    </style>

    <style name="ThemeOverlay.Sexbook.CheckBox.Yellow" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorOnPrimary">@color/CP</item><!--avoid transparent-->
    </style>

    <style name="Theme.Sexbook.CheckBox.White" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/CPDD</item><!--avoid ?android:attr/textColor-->
        <item name="buttonTint">@color/CPDD</item><!--avoid ?android:attr/textColor-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Sexbook.CheckBox.White</item>
    </style>

    <style name="ThemeOverlay.Sexbook.CheckBox.White" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorOnPrimary">?attr/colorSurface</item><!--avoid transparent-->
    </style>

    <style name="Theme.Sexbook.Switch.Dialogue" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:textColor">@color/CPDDD</item>
        <item name="colorPrimary">@color/CPD</item>
        <item name="colorOnSurface">@color/CPDD</item>
        <item name="switchStyle">@style/Theme.Sexbook.Switch.Dialogue</item>
    </style>

    <style name="Theme.Sexbook.Popup" parent="Widget.Material3.PopupMenu">
        <item name="fontFamily">@font/normal</item>
        <item name="android:textColor">@color/dialogText</item>
        <item name="checkboxStyle">@style/Theme.Sexbook.CheckBox.White</item>
    </style>

    <style name="Theme.Sexbook.Chip" parent="Widget.Material3.Chip.Suggestion">
        <!--<item name="chipIconTint">@color/shrine_pink_900</item>-->
        <item name="chipBackgroundColor">@color/chip_normal</item>
        <item name="chipStrokeWidth">0dp</item>
        <!--<item name="chipStrokeColor">@color/stroke_tint</item>-->
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Sexbook.Small</item>
    </style>


    <!-- ShapeAppearance -->
    <style name="ShapeAppearance_Sexbook_Nav">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/largeCornerSize</item>
        <item name="cornerSizeTopRight">@dimen/largeCornerSize</item>
    </style>

    <style name="ShapeAppearance.Sexbook.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/mediumCornerSize</item>
    </style>

    <style name="ShapeAppearance.Sexbook.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/smallCornerSize</item>
    </style>
</resources>