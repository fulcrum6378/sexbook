<resources>

    <style name="parentConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="shadow_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/shadow_1</item>
    </style>

    <style name="body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/toolbar</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="popupTheme">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="titleMarginStart">0dp</item>
        <item name="titleTextColor">@color/tbTitle</item>
        <item name="titleTextAppearance">@style/SexTheme.Toolbar</item>
    </style>

    <style name="tbShadow" parent="shadow_1">
        <item name="android:layout_height">6dp</item>
        <item name="android:alpha">0.4</item>
        <item name="layout_constraintTop_toBottomOf">@id/toolbar</item>
    </style>

    <style name="add">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="android:elevation">2dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="addIV" parent="parentConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">0.6</item>
        <item name="layout_constraintHeight_percent">0.6</item>
    </style>

    <style name="desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/tp</item>
        <item name="android:hint">@string/desc</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">10</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColor">@color/mrvNotes</item>
        <item name="android:textColorHint">@color/mrvNotesHint</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Main -->
    <style name="loadIV" parent="parentConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/logo_1</item>
        <item name="layout_constraintWidth_percent">0.7</item>
        <item name="layout_constraintHeight_percent">0.7</item>
    </style>


    <!-- Singular -->
    <style name="identifyField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="identifyET" parent="identifyField">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@color/tp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="identifyButton" parent="identifyField">
        <item name="android:background">@drawable/button_3</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="identifySep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/identifySep</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <!-- Estimation -->
    <style name="etDateButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spn_filter</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:text">@string/etDateHint</item>
        <item name="android:textColor">@color/mrvDate</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="etDateLabel">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mrvNotes</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>


    <!-- Settings -->
    <style name="stItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">@drawable/yellow_box</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="stItemTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/stItemTV</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">7sp</item>
        <item name="android:paddingEnd">7sp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="stItemTweak">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <!-- JDTP -->
    <style name="jdtp_time_label">
        <item name="android:textSize">@dimen/jdtp_time_label_size</item>
        <item name="android:textColor">@color/jdtp_numbers_text_color</item>
    </style>

    <style name="jdtp_ampm_label">
        <item name="android:textSize">@dimen/jdtp_ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/jdtp_ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="jdtp_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/jdtp_material_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="jdtp_ActionButton.Text">
        <item name="android:textSize">@dimen/jdtp_material_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/jdtp_material_button_background</item>
        <item name="android:minWidth">@dimen/jdtp_material_button_minwidth</item>
        <item name="android:paddingLeft">@dimen/jdtp_material_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/jdtp_material_button_textpadding_horizontal</item>
        <item name="android:textColor">@color/jdtp_button_color</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
