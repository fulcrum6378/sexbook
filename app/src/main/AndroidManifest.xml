<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" /><!--TODO RUNTIME-->
    <!--<uses-permission android:name="com.google.android.gms.permission.AD_ID" />-->

    <permission
        android:name="${packageName}.READ_DATABASE"
        android:description="@string/permReadDb"
        android:label="read the Sexbook database" />
    <permission
        android:name="${packageName}.WRITE_DATABASE"
        android:description="@string/permWriteDb"
        android:label="modify the Sexbook database" />
    <!--android:protectionLevel="dangerous"-->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/new_backup"
        android:fullBackupContent="@xml/old_backup"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sexbook"
        tools:ignore="UnusedAttribute">

        <activity
            android:name=".Main"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="@string/momImport">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="content" />
                <data android:mimeType="application/json" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <activity
            android:name=".Places"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".Main"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".Estimation"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".Main"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".Settings"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".Main" />

        <activity
            android:name=".stat.Singular"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan|adjustResize" />

        <activity
            android:name=".stat.Adorability"
            android:exported="false"
            android:launchMode="singleTop" /><!-- android:screenOrientation="landscape" -->

        <activity
            android:name=".stat.Growth"
            android:exported="false"
            android:launchMode="singleTop" />

        <activity
            android:name=".stat.Mixture"
            android:exported="false"
            android:launchMode="singleTop" />

        <service
            android:name=".more.SexTileService"
            android:exported="true"
            android:icon="@drawable/add"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${packageName}.send"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <provider
            android:name=".data.Provider"
            android:authorities="${packageName}"
            android:exported="true"
            android:readPermission="ir.mahdiparastesh.sexbook.READ_DATABASE"
            android:writePermission="ir.mahdiparastesh.sexbook.WRITE_DATABASE" />

        <!--<meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9457309151954418~8523725765" />-->
    </application>
</manifest>