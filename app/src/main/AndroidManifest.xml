<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.mahdiparastesh.sexbook">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Main"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter><!-- Must certainly be separated! -->

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="content" />
                <data android:mimeType="application/json" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <activity
            android:name=".Places"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <activity
            android:name=".Estimation"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <activity
            android:name=".Settings"
            android:exported="false"
            android:launchMode="singleTop">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <activity
            android:name=".stat.Singular"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan|adjustResize" />

        <activity
            android:name=".stat.Popularity"
            android:exported="false"
            android:launchMode="singleTop" /><!-- android:screenOrientation="landscape" -->

        <activity
            android:name=".stat.Growth"
            android:exported="false"
            android:launchMode="singleTop" />

        <service
            android:name=".more.SexTileService"
            android:exported="true"
            android:icon="@drawable/add"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>
</manifest>